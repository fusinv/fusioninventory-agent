/var/log/fusioninventory.log {
    weekly
    rotate 52
    compress
    delaycompress
    notifempty
    missingok
    sharedscripts
    postrotate
        [ -f /etc/default/fusioninventory-agent ] && . /etc/default/fusioninventory-agent
        [ "$MODE" != "cron" ] && invoke-rc.d fusioninventory-agent restart 2>/dev/null >/dev/null || true
    endscript
}

